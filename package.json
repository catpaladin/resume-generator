{
  "name": "resume-generator",
  "version": "0.2.16",
  "description": "A modern, portable resume generator built with Astro + Svelte",
  "author": "catpaladin",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "electron": "electron ./electron/main.js",
    "electron:dev": "astro build && electron ./electron/main.js",
    "electron:pack": "astro build && electron-builder",
    "electron:dist": "astro build && electron-builder --publish=never",
    "dist:win": "astro build && electron-builder --win",
    "dist:mac": "astro build && electron-builder --mac",
    "dist:linux": "astro build && electron-builder --linux"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/svelte": "^7.2.4",
    "@astrojs/tailwind": "^6.0.2",
    "@types/natural": "^5.1.5",
    "astro": "^5.16.6",
    "bits-ui": "^2.14.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "docx": "^9.5.1",
    "jspdf": "^3.0.4",
    "lucide-svelte": "^0.561.0",
    "mammoth": "^1.11.0",
    "natural": "^8.1.0",
    "node-fetch": "^3.3.2",
    "pdfjs-dist": "^5.4.449",
    "svelte": "^5.46.0",
    "svelte-check": "^4.3.4",
    "tailwind-merge": "^3.4.0",
    "vitest": "^4.0.16",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.9",
    "@types/node": "^24.10.4",
    "@vitest/coverage-v8": "4.0.16",
    "electron": "^37.10.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.0.11",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "sirv-cli": "^3.0.1",
    "tailwindcss": "^3.4.19",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.resumegen.app",
    "productName": "Resume Generator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "api-server.ts",
      "tsconfig.server.json",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/sirv-cli",
        "to": "sirv-cli"
      },
      {
        "from": "node_modules/ts-node",
        "to": "ts-node"
      }
    ],
    "asarUnpack": [
      "node_modules/sirv-cli/**/*",
      "node_modules/ts-node/**/*",
      "node_modules/typescript/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "type": "distribution"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "title": "${productName} ${version}"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    }
  }
}
