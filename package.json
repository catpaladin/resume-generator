{
  "name": "resume-generator",
  "version": "0.2.20",
  "description": "A modern, portable resume generator built with Next.js, React, and Electron",
  "author": "catpaladin",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build && bun run build:server",
    "build:server": "bun build ./api-server.ts --target node --format cjs --outfile ./dist/api-server.js",
    "preview": "astro preview",
    "check": "astro check",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "electron": "electron ./electron/main.js",
    "electron:dev": "bun run build && electron ./electron/main.js",
    "electron:pack": "bun run build && electron-builder",
    "electron:dist": "bun run build && electron-builder --publish=never",
    "dist:win": "bun run build && electron-builder --win",
    "dist:mac": "bun run build && electron-builder --mac",
    "dist:linux": "bun run build && electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/svelte": "^7.2.5",
    "@astrojs/tailwind": "^6.0.2",
    "@types/natural": "^6.0.1",
    "astro": "^5.16.10",
    "bits-ui": "^2.15.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "docx": "^9.5.1",
    "jspdf": "^4.0.0",
    "lucide-svelte": "^0.562.0",
    "mammoth": "^1.11.0",
    "natural": "^8.1.0",
    "node-fetch": "^3.3.2",
    "pdfjs-dist": "^5.4.530",
    "svelte": "^5.46.4",
    "svelte-check": "^4.3.5",
    "tailwind-merge": "^3.4.0",
    "vitest": "^4.0.17",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  },
  "overrides": {
    "qs": "^6.14.1",
    "h3": "^1.15.5",
    "diff": "^8.0.3",
    "devalue": "^5.6.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "4.0.17",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.3.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.resumegen.app",
    "productName": "Resume Generator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [],
    "asarUnpack": [],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "type": "distribution"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "title": "${productName} ${version}"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    }
  }
}
